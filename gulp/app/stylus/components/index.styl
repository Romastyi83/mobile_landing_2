*
  margin 0
  padding 0
  box-sizing border-box
  line-height 1
  font-family 'Fira Sans', sans-serif
  &:before
    box-sizing border-box
h1, h2, h3, h4, h5, h6
  margin 0
.container
  max-width 480px
  margin 0 auto
  min-height 100vh
  display flex
  flex-direction column
  overflow hidden
.header
  height 42px
  display flex
  align-items center
  background-color #fff
  +element(holder)
    display flex
    gap 6px
  +element(item)
    height 24.76px
    display flex
    justify-content center
    align-items center
    background #434343
    border-radius 6px
    padding 0 8px
    color #fff
    +modifier(r)
      background-color #FF0000
  +element(text)
    font-weight 900
    font-size 13px
    margin-left 5px
  +element(left)
    font-weight 900
    font-size 14.0747px
    color #000
    margin 0 15px
.main
  display flex
  flex-direction column
  justify-content center
  align-items center
  flex-grow 1
  padding-top 13px
  background-color #000
  background-image url(../images/bg.png)
  background-position center
  background-repeat no-repeat
  background-size auto 100%
.btns
  width 100%
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin-bottom 50px
.btn
  height 100px
  width 90%
  line-height 61px
  background linear-gradient(180deg, #FF00A8 0%, #B60078 100%)
  border-radius 10px
  font-family 'Fira Sans', sans-serif
  font-weight 800
  font-size 24px
  color #fff
  text-decoration none
  display flex
  justify-content center
  align-items center
  margin-bottom 5px
  +element(play)
    margin 0 10px
  +element(desc)
    font-weight 400
    font-size 10px
    line-height 9px
    color #D9D9D9
  +element(group)
    width 100%
    display flex
    flex-direction column
    align-items center
    & + &
      margin-top 20px
  +element(right)
    font-size 14px
  @media screen and (max-height: 700px)
    height 61px
    font-size 22px
.bonus
  display flex
  flex-direction column
  align-items center
  +element(items)
    display flex
    max-width 280px
    gap 20px
    margin 0 15px
  +element(item)
    font-weight 700
    font-size 13px
    color #fff
.player
  height 42px
  display flex
  justify-content space-between
  align-items center
  background #2D2D2D
  border-top 1px solid #494949
  border-bottom 1px solid #494949
  padding 0 15px
  +element(header)
    font-weight 700
    font-size 14.0747px
    color #D000A2
  +element(desc)
    font-size 10px
    color #fff
  +element(btns)
    display flex
    align-items center
    gap 14px
  +element(btn)
    cursor pointer
  +element(left)
    display flex
    align-items center
  +element(name)
    margin-left 14px
.footer
  background-color #000
  +element(text)
    font-size 10px
    line-height 9px
    color #797979
    text-align center
    padding 5px 15px
  +element(link)
    color #797979